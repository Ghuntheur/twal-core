{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@twal/*": ["@twal/*"],
      "@root/*": ["./*"]
    },
    "lib": ["dom", "es2015", "es2017"]
  },
  "include": [
    "./src/**/*",
    "./@twal/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}
